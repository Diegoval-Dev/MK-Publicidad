version: '3.8'
services:
  backend:
    container_name: mk_backend
    build: ./
    ports:
      - "3000:3000"
    depends_on:
      - mysql
    volumes:
      - .:/usr/src/app
      - /usr/src/app/node_modules
    restart: always
  mysql:
    container_name: mk_mysql
    build: ./src/database/
    restart: always
    environment:
      MYSQL_DATABASE: mkdb
      MYSQL_ROOT_PASSWORD: root
    ports:
      - "3309:3306"
    volumes:
      - mysql-data:/var/lib/mysql
      - ./src/database/schemas.sql:/docker-entrypoint-initdb.d/init-db.sql
volumes:
    mysql-data:
        driver: "local"
